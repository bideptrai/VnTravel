<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemVaoLichTrinh"
    android:background="@drawable/taolichtrinh"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/trangtri"
        android:layout_marginTop="14dp">
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đà Nẵng 2017"
        android:textColor="#433433"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chiaselichtrinh"
            android:background="@android:color/transparent">
        </ImageButton>
        <ImageButton
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/themvaolichtrinh"
            android:background="@android:color/transparent">
        </ImageButton>
        <ImageButton
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xoalichtrinh"
            android:background="@android:color/transparent">
        </ImageButton>
    </LinearLayout>
</LinearLayout>