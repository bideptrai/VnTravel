<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="24dp">

    <TextView
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui lòng cung cấp thông tin để chúng tôi có thể nâng cao trải nghiệm của bạn khidùng ứng dụng.">
    </TextView>

    <EditText
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:id="@+id/inputTen"
        android:paddingLeft="30dp"
        android:text="Tên của bạn là"
        android:textColor="#000000"
        android:background="@drawable/rounded_input"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Spinner
            android:id="@+id/spnGT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_input"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="26dp"
            android:singleLine="true"
            android:textColor="#C4C4C4"></Spinner>

        <ImageView
            android:id="@+id/imgvGT"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:alpha=".5"
            android:onClick="ShowHidePass"
            android:src="@drawable/dropdownlist"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="-25dp">

        <Spinner
            android:id="@+id/spnNS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_input"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="26dp"
            android:singleLine="true"
            android:textColor="#C4C4C4"></Spinner>

        <ImageView
            android:id="@+id/imgvNS"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:alpha=".5"
            android:onClick="ShowHidePass"
            android:src="@drawable/dropdownlist"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="-25dp">

        <Spinner
            android:id="@+id/spnNghe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_input"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="26dp"
            android:singleLine="true"
            android:textColor="#C4C4C4"></Spinner>

        <ImageView
            android:id="@+id/imgvNghe"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:alpha=".5"
            android:onClick="ShowHidePass"
            android:src="@drawable/dropdownlist"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="-25dp">

        <Spinner
            android:id="@+id/spnThuNhap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_input"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="26dp"
            android:singleLine="true"
            android:textColor="#C4C4C4"></Spinner>

        <ImageView
            android:id="@+id/imgvThuNhap"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:alpha=".5"
            android:onClick="ShowHidePass"
            android:src="@drawable/dropdownlist"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

    <Button
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:id="@+id/btnTiep"
        android:background="@drawable/rounded_button"
        android:text="Tiếp theo"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_gravity="right"
        android:paddingRight="20px"
        android:textAllCaps="false"
        android:drawableRight="@drawable/next"
        android:layout_marginTop="50dp">
    </Button>
</LinearLayout>