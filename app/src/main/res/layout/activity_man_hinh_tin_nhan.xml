<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinhTinNhan"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin nhan"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="37dp" />

            <ImageButton
                android:id="@+id/btnThongBao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/chuong"
                app:tint="#FFFFFF"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="333dp"
                tools:layout_editor_absoluteY="38dp" />
        </RelativeLayout>
        <Button
            android:layout_marginTop="24dp"
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_search"
            android:drawableLeft="@drawable/search"
            android:paddingLeft="15dp"
            android:drawablePadding="-50dp"
            android:hint="Tìm kiếm tin nhắn">
        </Button>
        <ImageView
            android:layout_marginTop="27dp"
            android:id="@+id/chat1"
            android:layout_width="335dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/chat1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="176dp" />
        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/imageView4"
            android:layout_width="335dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/chat2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="254dp" />

        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/imageView5"
            android:layout_width="335dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/chat3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="356dp" />

        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/imageView15"
            android:layout_width="335dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/chat4"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="442dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="116dp">

        <ImageButton
            android:id="@+id/btnTrangchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/home_unselected"
            android:background="@color/white"
            android:layout_marginLeft="43dp"
            android:layout_gravity="center_vertical">
        </ImageButton>

        <ImageButton
            android:id="@+id/btnLichTrinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/lichtrinh"
            android:background="@color/white"
            android:layout_marginLeft="66dp"
            android:layout_gravity="center_vertical">
        </ImageButton>

        <ImageButton
            android:id="@+id/btnTinNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tinnhan_selected"
            android:background="@color/white"
            android:layout_marginLeft="66dp"
            android:layout_gravity="center_vertical">
        </ImageButton>

        <ImageButton
            android:id="@+id/btnTaiKhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/taikhoan"
            android:background="@color/white"
            android:layout_marginLeft="66dp"
            android:layout_gravity="center_vertical">
        </ImageButton>
    </LinearLayout>
</LinearLayout>