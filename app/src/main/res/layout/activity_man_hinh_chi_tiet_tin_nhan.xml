<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinhChiTietTinNhan"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/btnQuayLaiTrangTruoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:background="@android:color/transparent">
        </ImageButton>

        <ImageButton
            android:id="@+id/nguoidung"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nguoidung"
            android:background="@android:color/transparent">
        </ImageButton>

        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/edit"
            android:layout_marginLeft="108dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_vertical"
            android:background="@android:color/transparent">
        </ImageButton>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cuoctrochuyen">
    </ImageView>
    <ImageView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/messanges_bar">
    </ImageView>
</LinearLayout>