<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinhThongBao"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btnQuayLaiTrangTruoc"
            android:src="@drawable/back"
            android:background="@android:color/transparent">
        </ImageButton>
        //btnQuayLai

        <TextView
            android:textAlignment="center"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#433433">
        </TextView>
        //txtDiNhieu

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btnSearch"
            android:src="@drawable/search"
            android:background="@android:color/transparent">
        </ImageButton>
        //btnQuayLai
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnDiaDiem"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/button_selector"
                android:text="Quan tâm"
                android:textAllCaps="false"
                android:textSize="16sp">
            </Button>
            //Diadiem
            <Button
                android:id="@+id/btnKhachSan"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/button_selector"
                android:text="Quan tâm"
                android:layout_marginLeft="12dp"
                android:textAllCaps="false"
                android:textSize="16sp">
            </Button>
            //Khachsan
            <Button
                android:id="@+id/btnNhaHang"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/button_selector"
                android:text="Quan tâm"
                android:layout_marginLeft="12dp"
                android:textAllCaps="false"
                android:textSize="16sp">
            </Button>
            //Diadiem
            <Button
                android:id="@+id/btnPtdc"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:background="@drawable/button_selector"
                android:text="Quan tâm"
                android:layout_marginLeft="12dp"
                android:textAllCaps="false"
                android:textSize="16sp">
            </Button>
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:src="@drawable/danhsachthongbao">
    </ImageView>

</LinearLayout>