<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemVaoLichTrinh"
    android:background="@drawable/taolichtrinh"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/trangtri"
        android:layout_marginTop="14dp">
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn địa điểm"
        android:textColor="#433433"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/themvaolichtrinh1"
            android:background="@android:color/transparent">
        </ImageButton>
        <TextView
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="Vietnam Airline"
            android:gravity="start"
            android:textColor="@color/black"
            android:layout_marginLeft="28dp">
        </TextView>

        <CheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:checked="true"
            android:layout_gravity="center">
        </CheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/themvaolichtrinh2"
            android:background="@android:color/transparent">
        </ImageButton>
        <TextView
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="Công viên Phú Quốc"
            android:gravity="start"
            android:textColor="@color/black"
            android:layout_marginLeft="28dp">
        </TextView>

        <CheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center">
        </CheckBox>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">


        <Button
            android:id="@+id/btnHoanTat"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_button"
            android:text="Thêm"
            android:textAllCaps="false"
            android:textColor="@color/white"></Button>

    </RelativeLayout>
</LinearLayout>