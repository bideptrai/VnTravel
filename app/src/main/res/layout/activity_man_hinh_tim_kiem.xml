<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinhTimKiem"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="36dp"
    android:orientation="vertical"
    android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:textColorHint="#C3B8B6"
                android:textSize="16sp"
                android:id="@+id/edttSearch"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:background="@drawable/rounded_search"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="10dp"
                android:hint="Tìm kiếm theo địa điểm,...">
            </EditText>
            //Search
            <Button
                android:id="@+id/btnHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/underline_text"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:background="@android:color/transparent">
            </Button>
        </LinearLayout> //Header

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnDiaDiem"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_selector"
                    android:text="Địa điểm"
                    android:textAllCaps="false"
                    android:textSize="16sp">
                </Button>
                //Diadiem
                <Button
                    android:id="@+id/btnKhachSan"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_selector"
                    android:text="Khách sạn"
                    android:layout_marginLeft="12dp"
                    android:textAllCaps="false"
                    android:textSize="16sp">
                </Button>
                //Khachsan
                <Button
                    android:id="@+id/btnNhaHang"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_selector"
                    android:text="Nhà hàng"
                    android:layout_marginLeft="12dp"
                    android:textAllCaps="false"
                    android:textSize="16sp">
                </Button>
                //Diadiem
                <Button
                    android:id="@+id/btnPtdc"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_selector"
                    android:text="Phương tiện di chuyển"
                    android:layout_marginLeft="12dp"
                    android:textAllCaps="false"
                    android:textSize="16sp">
                </Button>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Tìm kiếm gần đây">
        </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="9dp">
        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:background="@drawable/button_selector"
            android:text="Du lịch Đà Nẵng"
            android:textAllCaps="false"
            android:textSize="16sp">
        </Button>
        //Diadiem
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/button_selector"
            android:text="Hạ Long"
            android:layout_marginLeft="12dp"
            android:textAllCaps="false"
            android:textSize="16sp">
        </Button>
        //Khachsan

    </LinearLayout>
</LinearLayout>