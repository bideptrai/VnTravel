                                    android:textColor="#26BFB3"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:layout_marginTop="5dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:id="@+id/btnChiTietDiaDiem4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageButton
                                android:background="#ffffff"
                                android:layout_width="180dp"
                                android:layout_height="160dp"
                                app:srcCompat="@drawable/diadiem1">
                            </ImageButton>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mũi né"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_marginTop="12dp">
                            </TextView>
                            <ImageView
                                android:layout_width="84dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:srcCompat="@drawable/danhgia">
                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TP.Phan Thiết"
                                android:textColor="#7A7A7A"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:layout_marginTop="5dp">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        //Tour nổi bật
        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="18dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tỉnh thành"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold">
                    </TextView>

                    <Button
                        android:id="@+id/btnXemTatCa3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Xem tất cả"
                        android:layout_marginLeft="145dp"
                        android:drawableRight="@drawable/next1"
                        android:textSize="16dp"
                        android:textAllCaps="false"
                        android:background="@android:color/transparent">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/btnChiTietTinhThanh1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/btnTinh"
                                android:background="#ffffff"
                                android:layout_width="144dp"
                                android:layout_height="193dp"
                                app:srcCompat="@drawable/tinh1">
                            </ImageButton>

                            <ImageButton
                                android:layout_marginLeft="16dp"
                                android:background="#ffffff"
                                android:layout_width="144dp"
                                android:layout_height="193dp"
                                app:srcCompat="@drawable/tinh2">
                            </ImageButton>

                            <ImageButton
                                android:layout_marginLeft="16dp"
                                android:background="#ffffff"
                                android:layout_width="144dp"
                                android:layout_height="193dp"
                                app:srcCompat="@drawable/tinh3">
                            </ImageButton>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        //Tỉnh thành
