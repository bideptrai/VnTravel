<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinhTaiKhoan"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/taikhoan_header">
        </ImageView>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnThayDoiThongTin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/anhdaidien"
                android:background="@android:color/transparent">
            </ImageButton>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trần Xuân Mạnh"
                    android:textColor="#433433"
                    android:textSize="20sp">
                </TextView>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/thanhvien">
                </ImageButton>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@drawable/rounded_input"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnDichVuDaDung"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dichvudadung"
                android:background="@android:color/transparent">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnDanhGia"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/danhgia_taikhoan"
                android:background="@android:color/transparent">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnVoucher"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/voucher"
                android:background="@android:color/transparent">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnCaiDat"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/caidat"
                android:background="@android:color/transparent">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnDieuKhoan"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dieukhoan"
                android:background="@android:color/transparent">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnVeChungToi"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/vechungoti"
                android:layout_marginBottom="17dp"
                android:background="@android:color/transparent">
            </ImageButton>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            android:text="Đăng xuất"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button">
        </Button>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <ImageButton
                android:id="@+id/btnTrangchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/home_unselected"
                android:background="@color/white"
                android:layout_marginLeft="43dp"
                android:layout_gravity="center_vertical">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnLichTrinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/lichtrinh"
                android:background="@color/white"
                android:layout_marginLeft="66dp"
                android:layout_gravity="center_vertical">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnTinNhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tinnhan"
                android:background="@color/white"
                android:layout_marginLeft="66dp"
                android:layout_gravity="center_vertical">
            </ImageButton>

            <ImageButton
                android:id="@+id/btnTaiKhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/taikhoan_selected"
                android:background="@color/white"
                android:layout_marginLeft="66dp"
                android:layout_gravity="center_vertical">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>

</ScrollView>